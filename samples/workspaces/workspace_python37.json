{
  "metadata": {
    "name": "python-altzs"
  },
  "projects": [
    {
      "name": "python-hello-world",
      "source": {
        "location": "https://github.com/che-samples/python-hello-world.git",
        "type": "git"
      }
    }
  ],
  "components": [
    {
      "id": "ms-python/python/latest",
      "memoryLimit": "512Mi",
      "type": "chePlugin"
    },
    {
      "mountSources": true,
      "memoryLimit": "512Mi",
      "type": "dockerimage",
      "image": "quay.io/eclipse/che-python-3.7@sha256:65fcf19813a56ade5f51a81de46af9c5210db8a4691241b95e90d4510bcdd3c1",
      "alias": "python"
    }
  ],
  "apiVersion": "1.0.0",
  "commands": [
    {
      "name": "run",
      "actions": [
        {
          "workdir": "${CHE_PROJECTS_ROOT}/python-hello-world",
          "type": "exec",
          "command": "python hello-world.py",
          "component": "python"
        }
      ]
    }
  ]
}